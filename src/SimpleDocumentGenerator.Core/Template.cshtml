@using RazorLight;

@model SimpleDocumentGenerator.Core.TemplateModel

@{
    int counter = 0;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Simple Document Output</title>
</head>
<body>
    <table style="margin-left: auto;margin-right: auto;">
        <tr>
            <td></td>
            <td></td>
            <td style="text-align: center;">
                <h1>@Model.TitleText</h1>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td style="text-align: center;">@Model.HtmlStringDescription</td>
            <td></td>
            <td></td>
        </tr>
        @for (var index = 0; index < Model.ImageLinks.Length; index++)
        {
            var imageLink = Model.ImageLinks[index];

            if (counter == 0)
            {
                @:<tr>
            }

            @:<td><img src="@imageLink" alt="Picture(@index)" width="360" height="360"></td>

            if (counter == 4)
            {
                @:</tr>
                counter = 0;
            }

            counter++;
        }
        @if (counter < 4)
        {
            @:</tr>
        }
    </table>
</body>
</html>